<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/root_padding"
    tools:context=".fragment.ReadFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/textview_read_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="독서시간 측정"
        android:textSize="@dimen/font_big" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3" />

    <Chronometer
        android:id="@+id/chronometer_read_stopwatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/dimm"
        android:textSize="@dimen/font_big" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_read_stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@color/warn"
            android:text="독서 종료"
            android:textColor="@color/dimmWhite"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_read_control"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@color/signiture"
            android:text="독서 시작"
            android:textColor="@color/dimmWhite"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>